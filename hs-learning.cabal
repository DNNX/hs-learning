               , containers >=0.5 && <0.6
               , parsec >=3.1 && <3.2
               , hspec
               , QuickCheck
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite tests
    build-depends: base
                 , hs-learning
                 , hspec
                 , QuickCheck
                 , containers

    default-language: Haskell2010
    hs-source-dirs:   testsuite
    main-is:          Spec.hs
    type:             exitcode-stdio-1.0
